<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dc"
    tools:context=".seven">

    <Button
        android:id="@+id/bay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/arrow1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/account2">
        </ImageView>

        <EditText
            android:id="@+id/EditTextText5"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom2"
            android:drawableLeft="@drawable/person2"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:textAlignment="viewStart"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/EditTextText6"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom2"
            android:drawableLeft="@drawable/lock2"
            android:drawablePadding="8dp"
            android:hint="password"
            android:padding="15dp"
            android:textStyle="bold"
            android:textColor="@color/white">

        </EditText>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="245dp"
            android:layout_height="67dp"
            android:background="@drawable/round8"
            android:text="lOGIN"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginTop="20dp">

        </Button>

    </LinearLayout>

</RelativeLayout>