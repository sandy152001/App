<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bq"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/run"
        android:gravity="center"
        android:layout_marginRight="85dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round10"
        android:text="Get Started"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/text1"
        android:layout_width="341dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"
        android:text="Welcome \nin the app!"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="350dp">


        <TextView
            android:id="@+id/text9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/smile"
            android:text=" Good Morning"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Today, in your location is Ghaziabad\nThe weather of Ghaziabad is pretty\n hot and currently 40 degree celsius. "
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/text11"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:text="AUG, 2024"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="200dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview5"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:src="@drawable/in" />

            <ImageView
                android:id="@+id/imageview6"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:src="@drawable/yt" />

            <ImageView
                android:id="@+id/imageview7"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ni"/>

        </LinearLayout>



    </LinearLayout>





</RelativeLayout>